
/**
 * This ruleset enforces a strict user-ownership security model for a multi-user
 * note-taking application. It is designed for rapid prototyping, prioritizing
 * strong authorization while maintaining flexibility in data schemas.
 *
 * Core Philosophy:
 * Each user's data is completely isolated. A user can only ever read or write
 * their own information. There is no concept of public or shared data, and
 * users cannot see or interact with other users' content in any way.
 *
 * Data Structure:
 * All user-generated content is nested under a user-specific path:
 * /users/{userId}
 *   - /topics/{topicId}
 *     - /notes/{noteId}
 *   - /todos/{todoId}
 *   - /studyStats/{userId}
 *   - /recursionBoards/{boardId}
 * This hierarchical structure is the primary mechanism for enforcing security,
 * as ownership is determined by the {userId} in the path.
 *
 * Key Security Decisions:
 * - User Enumeration is Disabled: Listing the top-level `/users` collection is
 *   explicitly forbidden to prevent discovery of other users on the platform.
 * - Strict Ownership: All operations (read, write, delete) on any document
 *   within a user's data tree (`/users/{userId}/*`) are restricted to the
 *   authenticated user whose UID matches the `userId` in the path.
 * - Default Deny: All access is denied by default. Permissions are only granted
 *   through explicit `allow` statements.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //-------------------------------------------------------------------------
    //  Helper Functions
    //-------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasValidTodoFieldsOnCreate(userId) {
        let data = request.resource.data;
        return data.userId == userId
            && data.content is string
            && data.isCompleted == false;
    }

    function hasImmutableTodoFields() {
        let incomingData = request.resource.data;
        let existingData = resource.data;
        return incomingData.userId == existingData.userId
            && incomingData.createdAt == existingData.createdAt;
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Prevent user enumeration
      
      // A user can create their own document
      allow create: if isOwner(userId) && request.resource.data.id == userId && request.resource.data.email == request.auth.token.email;
      
      // A user can update their own document, but cannot change their ID or email
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id && request.resource.data.email == resource.data.email;
      
      // Users should not be able to delete their own account from here
      allow delete: if false;

      match /topics/{topicId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isOwner(userId);

        match /notes/{noteId} {
          allow get, list: if isOwner(userId);
          allow create: if isOwner(userId) && request.resource.data.topicId == topicId;
          allow update: if isOwner(userId) && request.resource.data.topicId == resource.data.topicId;
          allow delete: if isOwner(userId);
        }
      }
      
      match /todos/{todoId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && hasValidTodoFieldsOnCreate(userId);
        allow update: if isOwner(userId) && hasImmutableTodoFields();
        allow delete: if isOwner(userId);
      }

      match /studyStats/{statsId} {
        allow get, create, update: if isOwner(userId) && statsId == userId;
        allow delete: if false; 
      }

      match /recursionBoards/{boardId} {
        allow get, list, create, update, delete: if isOwner(userId);

        match /cards/{cardId} {
          allow get, list, create, update, delete: if isOwner(userId);
        }

        match /connections/{connectionId} {
          allow get, list, create, update, delete: if isOwner(userId);
        }
      }
    }
  }
}
